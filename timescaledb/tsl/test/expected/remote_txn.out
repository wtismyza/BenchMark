    server_name            NAME,
    host                   TEXT = 'localhost',
    database               NAME = current_database(),
    port                   INTEGER = inet_server_port(),
    if_not_exists          BOOLEAN = FALSE,
    bootstrap		   BOOLEAN = TRUE,
    bootstrap_database     NAME = 'postgres'
